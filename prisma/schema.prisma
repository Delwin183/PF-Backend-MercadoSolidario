// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ong {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String 
  lastName          String
  phone             String?
  country           String
  province          String
  amountEmployee    String?
  ongName           String
  ongCUIT           String
  posts             Post[] 
}

model Post {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  author            Ong   @relation(fields: [authorId], references: [id])
  authorId          String @db.ObjectId
  date              DateTime? @default(now())
  expirationDate    String
  updateDate        DateTime? @default(now())
  title             String
  description       String?
  location          String
  image             String?
  resultsAchieved   String?
  confirmPost_id    String[]   @db.ObjectId
  users             Users[] @relation(fields: [confirmPost_id], references: [id])
  type_of_donor     type_of_donor? @default(EFECTIVO)
  type_of_volunteer String?
}

model Companies {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String 
  lastName          String
  phone             String 
  country           String
  amountEmployee    String
  companyName       String
  companyCUIT       String
}

model Users {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  lastName          String
  cuil              String 
  user_linkedin     String
  birthDate         DateTime 
  profession        String
  email             String
  password          String
  posts             Post[] @relation(fields: [userIds], references: [id])
  userIds           String[] @db.ObjectId
}

enum type_of_donor {
  EFECTIVO
  EN_ESPECIE
}

